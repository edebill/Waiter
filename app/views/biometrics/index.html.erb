  </tr>

<% @biometrics.each do |biometric| %>
  <tr>
    <td><%= biometric.weight %></td>
    <td><%= biometric.systolic %></td>
    <td><%= biometric.diastolic %></td>
    <td><%= biometric.bpm %></td>
    <td><%= biometric.user_id %></td>
    <td><%= link_to 'Show', biometric %></td>
    <td><%= link_to 'Edit', edit_biometric_path(biometric) %></td>
    <td><%= link_to 'Destroy', biometric, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

